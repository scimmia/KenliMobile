<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/item_vertical_margin"
                android:paddingBottom="@dimen/item_vertical_margin">
    <TextView
            android:id="@+id/tongzhi_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:maxLines="2"
    />
    <TextView
            android:id="@+id/tongzhi_editor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tongzhi_title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
    />
    <TextView
            android:id="@+id/tongzhi_createtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tongzhi_title"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>
</RelativeLayout>