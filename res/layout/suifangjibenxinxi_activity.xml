<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout
            android:id="@+id/main_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_background"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:orientation="vertical">
        <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:columnCount="1">
            <TextView
                    android:text="女方姓名:"
                    style="@style/textview_header_normal"/>
            <EditText
                    android:id="@+id/et_nvfangxingming"
                    style="@style/select_edittext"/>
            <TextView
                    android:text="女方身份证号:"
                    style="@style/textview_header_normal"/>
            <EditText
                    android:id="@+id/et_nvfangshenfenzheng"
                    style="@style/select_edittext"/>
            <TextView
                    android:text="女方婚姻状况:"
                    style="@style/textview_header_normal"/>
            <EditText
                    android:id="@+id/et_nvfang_hunyin"
                    style="@style/select_edittext"/>
            <TextView
                    android:text="女方出生年月:"
                    style="@style/textview_header_normal"/>
            <EditText
                    android:id="@+id/et_nvfang_chusheng"
                    style="@style/select_edittext"/>
            <TextView
                    android:text="男方姓名:"
                    style="@style/textview_header_normal"/>
            <EditText
                    android:id="@+id/et_nanfangxingming"
                    style="@style/select_edittext"/>
            <TextView
                    android:text="男方身份证号:"
                    style="@style/textview_header_normal"/>
            <EditText
                    android:id="@+id/et_nanfangshenfenzheng"
                    style="@style/select_edittext"/>
            <TextView
                    android:text="男方婚姻状况:"
                    style="@style/textview_header_normal"/>
            <EditText
                    android:id="@+id/et_nanfang_hunyin"
                    style="@style/select_edittext"/>
            <TextView
                    android:text="男方出生年月:"
                    style="@style/textview_header_normal"/>
            <EditText
                    android:id="@+id/et_nanfang_chusheng"
                    style="@style/select_edittext"/>
            <TextView
                    android:text="婚姻变动时间:"
                    style="@style/textview_header_normal"/>
            <EditText
                    android:id="@+id/et_hunyinbiandongshijian"
                    style="@style/select_edittext"/>
            <TextView
                    android:text="现有男孩数:"
                    style="@style/textview_header_normal"/>
            <EditText
                    android:id="@+id/et_nanhaishu"
                    style="@style/select_edittext"/>
            <TextView
                    android:text="现有女孩数:"
                    style="@style/textview_header_normal"/>
            <EditText
                    android:id="@+id/et_nvhaishu"
                    style="@style/select_edittext"/>
            <TextView
                    android:text="长效措施种类:"
                    style="@style/textview_header_normal"/>
            <EditText
                    android:id="@+id/et_changxiaocuoshizhonglei"
                    style="@style/select_edittext"/>
            <TextView
                    android:text="落实时间:"
                    style="@style/textview_header_normal"/>
            <EditText
                    android:id="@+id/et_luoshishijian"
                    style="@style/select_edittext"/>
            <TextView
                    android:text="落实单位:"
                    style="@style/textview_header_normal"/>
            <EditText
                    android:id="@+id/luoshidanwei"
                    android:layout_gravity="center_vertical"
                    android:minWidth="200dp"
                    style="@style/select_edittext"
                    />
        </GridLayout>

    </LinearLayout>

</ScrollView>